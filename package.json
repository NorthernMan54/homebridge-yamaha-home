{
  "name": "homebridge-yamaha-home",
  "version": "0.2.0",
  "description": "homebridge-plugin for Yamaha AVR https://github.com/nfarina/homebridge",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NorthernMan54/homebridge-yamaha-home.git"
  },
  "preferGlobal": true,
  "keywords": [
    "homebridge-plugin",
    "YamahaAVR",
    "Yamaha"
  ],
  "engines": {
    "homebridge": "^1.6.0 || ^2.0.0-beta.0",
    "node": "^18.20.4 || ^20.15.1 || ^22.0.0"
  },
  "dependencies": {
    "bonjour": "^=3.5.0",
    "core-util-is": "^1.0.1",
    "debug": "^4.3.7",
    "inherits": "^2.0.1",
    "ip": "^=1.1.5",
    "node-cache": "^5.1.2",
    "q": "2.0.3",
    "request": "2.88.2",
    "semver": "^7.6.3",
    "util": "^0.12.5",
    "yamaha-nodejs": ">=0.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^8.57.1",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-jest": "^28.8.3",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7"
  },
  "author": "neonightmare <neonightmare@gmail.com> (https://github.com/neonightmare)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NorthernMan54/homebridge-yamaha-home/issues"
  },
  "homepage": "https://github.com/NorthernMan54/homebridge-yamaha-home#readme",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "watch": "nodemon",
    "test": "jest --detectOpenHandles",
    "test-coverage": "jest --coverage"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,cjs,mjs,json",
    "ignore": [
      "**/*.spec.js",
      "**/*.test.js"
    ],
    "exec": "DEBUG=HAP-NodeJS:HAPServer,yamaha*,Yamaha*- ~/npm/bin/homebridge -U ./test/hbConfig -T -D -P .",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [],
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**",
      "!src/accessories/**",
      "!src/lib/definitions/generate-definitions.ts",
      "!src/lib/definitions/generator-configuration.ts",
      "!src/test-utils"
    ]
  }
}
